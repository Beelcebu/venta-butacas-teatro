@page "/payment/failure"
@using Microsoft.AspNetCore.Components

<div class="payment-result failure">
    <div class="result-icon">
        ‚ùå
    </div>
    <h2>Pago No Procesado</h2>
    <p>Hubo un problema al procesar tu pago.</p>
    <p>Por favor, intenta nuevamente o contacta con soporte.</p>
    
    <div class="actions">
        <button class="btn-primary" @onclick="GoHome">
            Volver al Inicio
        </button>
        <button class="btn-secondary" @onclick="TryAgain">
            Intentar de Nuevo
        </button>
    </div>
</div>

@code {
    [Inject] NavigationManager NavigationManager { get; set; } = null!;

    void GoHome()
    {
        NavigationManager.NavigateTo("/");
    }

    void TryAgain()
    {
        NavigationManager.NavigateTo("/");
    }
}

